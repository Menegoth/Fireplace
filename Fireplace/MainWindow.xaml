<Window x:Class="Fireplace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fireplace"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas Name="backgroundCanvas" HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="792"/>
        <Label x:Name="timeLabel" Content="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-100,0,0"/>
        <Button x:Name="addButton" Content="Add 10 wood" HorizontalAlignment="Center" VerticalAlignment="Center" Width="85" Margin="0,0,0,0" Click="addButton_Click"/>
        <Button x:Name="woodButton" Content="Chop wood" HorizontalAlignment="Center" VerticalAlignment="Center" Width="96" Margin="0,200,0,0" Click="woodButton_Click"/>
        <Label x:Name="woodLabel" Content="You have 0 wood." HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0"/>
        <Label x:Name="fireLabel" Content="Your fire is burning." HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-200,0,0"/>


    </Grid>
</Window>
